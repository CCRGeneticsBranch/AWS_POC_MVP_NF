// def publishDirMode = 'move'

process {
    executor = 'slurm'
    queue = 'norm'
    queueSize = 100
    maxRetries = 0
    pollInterval = '1 min'
    queueStatInterval = '5 min'
    submitRateLimit = '6/1min'
    cache = 'lenient'
    clusterOptions = ' --gres=lscratch:400'
    scratch = '/lscratch/$SLURM_JOB_ID'
    stageInMode = 'symlink'
    stageOutMode = 'rsync'
    errorStrategy = { task.exitStatus in [140,143,137,104,134,139,1,255] ? 'retry' : 'finish' }
    maxRetries    = 2




    withName: 'Star.*|Rsem.*|BWA|Mutect|Manta|Strelka|Strelka_vcf_processing|Pvacseq' {
       cpus = '16'
       memory = { 75.GB * task.attempt }
       queue = 'ccr,norm'
       time = { 12.hour * task.attempt }
       clusterOptions = '--gres=lscratch:800'
   }


    withName: 'HSMetrics|Coverage|Fusion_Annotation|Kraken|GATK.*|Conpair.*|UnionSomaticCalls|Exome_QC|AddAnnotation.*|Combine_variants|VEP|Fastq_screen|TargetIntervals|VerifyBamID|Exome_HaplotypeCaller|CNVkitP.*|Sequenza.*' {
       cpus = '8'
       memory = { 75.GB * task.attempt }
       queue = 'ccr,norm'
       time = { 15.hour * task.attempt }
   }

    withName: 'Krona|Merge_fusion_annotation|MergeHLA|Fastqc|Arriba|Starfusion|TcellExtrect|RNAlibrary_customQC|RNAseQC|RNAseq_HaplotypeCaller|SnpEff|' {
       cpus = '16'
       memory = { 40.GB * task.attempt }
       queue = 'quick,norm'
       time = { 4.hour * task.attempt }
   }

    withName: 'Fastqc|Split_vcf|Multiqc.*|VDJtools|Mergefusion|Mixcr|Strandedness|Sequenza_annot|Mutect_order|Vcf2txt|CNVkit_png|CircosPlot.*|Bam2tdf|MakeHotSpotDB.*|FailedExons_Genes|Lib1_RNAqc_TrancriptCoverage|Merge_Pvacseq_vcf' {
       cpus = '4'
       memory = { 10.GB * task.attempt }
       queue = 'quick,norm'
       time = { 4.hour * task.attempt }
   }

    withName: 'CoveragePlot|Actionable.*|DBinput.*|Flagstat|Hotspot.*|Bamutil|FormatInput.*|Custom_annotation|Annovar|Combine_annotation|Expressed|MutationalSignature|MutationBurden|Cosmic3Signature' {
       cpus = '4'
       memory = '10 GB'
       queue = 'quick,norm'
       time = { 4.hour * task.attempt }
   }

    withName: 'Cutadapt.*|Fusioncatcher|Picard.*|Genotyping|Seq2HLA.*|HLAminer.*' {
       cpus = '16'
       memory = { 40.GB * task.attempt }
       queue = 'ccr,norm'
       time = { 15.hour * task.attempt }
   }
   withName: 'Read_depth' {
       cpus = '4'
       memory = { 200.GB * task.attempt }
       queue = 'ccr,norm'
       time = { 8.hour * task.attempt }
   }
}
