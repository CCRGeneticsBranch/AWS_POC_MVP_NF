process {
    executor = 'slurm'
    queue = 'norm'
    queueSize = 100
    errorStrategy = 'finish'
    maxRetries = 0
    pollInterval = '1 min'
    queueStatInterval = '5 min'
    submitRateLimit = '6/1min'
//            scratch = '/lscratch/$SLURM_JOBID'
    clusterOptions = ' --gres=lscratch:400'

    withName: Cutadapt {
       cpus = '4'
       memory = '2 GB'
       queue = 'quick'
       time = '2h'
   }

    withName: Fastqc {
       cpus = '4'
       memory = '2 GB'
       queue = 'quick'
       time = '2h'
   }

    withLabel: 'qc' {
       cpus = '4'
       memory = '2 GB'
       queue = 'quick'
       time = '2h'
   }

    withName: 'Star|Rsem' {
       cpus = '16'
       memory = '120 GB'
       queue = 'ccr,norm'
       time = '20h'
   }
   
    withName: multiqc {
       cpus = '4'
       memory = '50 GB'
       queue = 'ccr,norm'
       time = '4h'
   }	

    withName: 'Picard.*' {
       cpus = '10'
       memory = '50 GB'
       queue = 'ccr,norm'
       time = '4h'
   }

    withName: 'GATK.*' {
       cpus = '10'
       memory = '50 GB'
       queue = 'ccr,norm'
       time = '4h'
   }
    withName: fusioncatcher {
       cpus = '16'
       memory = '120 GB'
       queue = 'ccr,norm'
       time = '20h'
   }


}